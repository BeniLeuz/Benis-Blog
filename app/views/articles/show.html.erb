<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="row">
        <%= image_tag @article.image.url(:medium) %>
      </div>

      <p>
        <strong>Title:</strong>
        <%= @article.title %>
      </p>

      <p>
        <strong>Text:</strong>
        <%= @article.text %>
      </p>
    </div>

    <div class="col-6">
      <div class="row">
        <h2><strong>Add a comment</strong></h2>

        <%= render 'comments/comment_form' %>

        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary" %> |
        <%= link_to 'Back', articles_path, class: "btn btn-primary" %>
      </div>

      <div class="row">
        <div class="col-12">
          <h2>Comments</h2>
        </div>

        <% Rails.logger.info @article.comments.inspect %>
        <% @article.comments.select { |comment| comment.user }.each do |comment| %>
            <div class="col-12">
              <%= render 'comments/comment', comment: comment %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>